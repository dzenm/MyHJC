<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toobar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleTextAppearance="@id/appBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/guide_first"
                    app:layout_collapseMode="parallax" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingTop="25dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:title=""
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@null"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/btn_back" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/MaterialWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/confirm"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="right"
                        android:background="@null"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/btn_confirm" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/content"
                android:lineSpacingExtra="5dp"
                android:padding="20dp"
                android:textSize="14dp" />

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom">

            <TextView
                android:id="@+id/weather"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_above="@+id/view"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/weather_00"
                android:drawablePadding="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center|left"
                android:hint="@string/weather"
                android:paddingLeft="5dp"
                android:textColor="@color/MaterialLightBlack" />

            <TextView
                android:id="@+id/mood"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_above="@+id/view"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/weather"
                android:drawableLeft="@drawable/mood_00"
                android:drawablePadding="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center|left"
                android:hint="@string/mood"
                android:paddingLeft="5dp"
                android:textColor="@color/MaterialLightBlack" />

            <TextView
                android:id="@+id/location"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_above="@+id/view"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/mood"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/location"
                android:textColor="@color/MaterialLightBlack" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/recyclerView" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
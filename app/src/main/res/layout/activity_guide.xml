<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/guideViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/startBtn"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/guide_start"
                android:text="@string/enter_now"
                android:textColor="@color/MaterialWhite"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/guideAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <ImageView
                android:id="@+id/guidePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_selecting" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
